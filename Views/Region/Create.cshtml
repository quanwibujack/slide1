@model WebApplication1.Models.CreateRegionRequest

@{
    ViewData["Title"] = "Create Region";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-success text-white py-3 text-center">
                    <h4 class="m-0 fw-bold"><i class="fas fa-plus-circle"></i> Thêm Khu Vực Mới</h4>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Name" class="form-control rounded-3" placeholder="Nhập tên..." />
                            <label asp-for="Name" class="text-secondary">Tên Khu Vực</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-3 shadow-sm">
                                <i class="fas fa-save"></i> Tạo Mới
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
                                <i class="fas fa-arrow-left"></i> Quay Lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}