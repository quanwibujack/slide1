@model IEnumerable<WebApplication1.Models.Role>

@{
    ViewData["Title"] = "Role List";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .role-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
        border-radius: 15px;
        background: white;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .card-header-role {
        background: linear-gradient(45deg, #4e73df, #224abe); /* Màu xanh dương */
        color: white;
        border-radius: 15px 15px 0 0 !important;
        padding: 15px;
    }

    .btn-circle {
        border-radius: 50px;
        padding: 5px 15px;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="fas fa-user-shield"></i> Quản Lý Quyền (Role)</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill">
            <i class="fas fa-plus"></i> Thêm Role Mới
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm" role="alert">
            Chưa có Role nào. Hãy tạo mới!
        </div>
    }

    <div class="row g-4">
        @foreach (var role in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card role-card h-100">
                    <div class="card-header-role d-flex justify-content-between align-items-center">
                        <h5 class="m-0 fw-bold">ID: @role.roleId</h5>
                        <i class="fas fa-id-badge fa-lg opacity-50"></i>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center text-center py-4">
                        <h3 class="card-title text-dark fw-bold">@role.Name</h3>
                        <p class="text-muted small">Role Name</p>
                    </div>
                    <div class="card-footer bg-white border-0 pb-3 d-flex justify-content-around">
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.roleId"
                           class="btn btn-outline-warning btn-circle w-45">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.roleId"
                           class="btn btn-outline-danger btn-circle w-45">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>